<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="singleLineEditTextTheme" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:background">@drawable/selector_bg_edit_text</item>
        <item name="android:drawableRight">@drawable/edit_text_clear</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">10</item>
    </style>
    
    <style name="primaryTextViewTheme" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="labelTextViewTheme" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="customRadioButtonTheme" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/drawable_radio_button_left</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/selector_radio_button_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="customCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/drawable_check_box_left</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/selector_radio_button_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="customListViewTheme" parent="@android:style/Widget.DeviceDefault.Light.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
    </style>
    
    <style name="customFragmentTheme" parent="@android:style/Widget.DeviceDefault.Light">
        <item name="android:background">#f9f9f9</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/bg_action_bar</item>
        <item name="android:logo">@drawable/test_logo</item>
        
    </style>
    <!-- <item name="android:icon">@drawable/test_logo</item> -->

    <style name="OverFlow" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>
    
   <style name="customDialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>

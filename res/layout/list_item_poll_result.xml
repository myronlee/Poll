<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:id="@+id/result_bar"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@android:color/holo_blue_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:id="@+id/choice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="在我以前被自杀这个念头困扰的时候，博尔赫斯救了我。他曾经也认真想过自杀这件事，但后来想想，既然还有这样一个终极武器在手里，不如再多活活看，反正，最后总会死。嗯。"
            android:textColor="@color/primary_text"
            android:textSize="16sp" 
            android:singleLine="true"
            android:ellipsize="marquee"/>

        <com.diandian.coolco.poll.widget.MagicTextView
            android:id="@+id/result_num"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="52票"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <com.diandian.coolco.poll.widget.MagicTextView
            android:id="@+id/result_fraction"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical|right"
            android:text="23.5%"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>